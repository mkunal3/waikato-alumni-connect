{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",

    // Allow TypeScript to compile files in both src/ and prisma/
    "rootDir": ".",

    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },

  // Include both source folder and prisma folder (for seed.ts)
  "include": ["src/**/*", "prisma/**/*"]
}